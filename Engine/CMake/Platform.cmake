IF(WIN32)
	IF(MSVC)
		IF(CMAKE_GENERATOR MATCHES "Win64")
			SET(FISHENGINE_ARCH_NAME "x64")
			SET(FISHENGINE_VS_PLATFORM_NAME "x64")
		ELSEIF(CMAKE_GENERATOR MATCHES "ARM")
			SET(FISHENGINE_ARCH_NAME "arm")
			SET(FISHENGINE_VS_PLATFORM_NAME "ARM")
		ELSE()
			SET(FISHENGINE_ARCH_NAME "x86")
			SET(FISHENGINE_VS_PLATFORM_NAME "Win32")
		ENDIF()
	ENDIF()
	IF(WINDOWS_STORE)
		SET(FISHENGINE_PLATFORM_NAME "win_store")
		IF(NOT (CMAKE_SYSTEM_VERSION VERSION_LESS "10.0"))
			SET(FISHENGINE_PLATFORM_WINDOWS_UWP TRUE)
		ENDIF()
		SET(FISHENGINE_PLATFORM_WINDOWS_STORE TRUE)
		SET(FISHENGINE_PLATFORM_WINDOWS_RUNTIME TRUE)
	ELSEIF(WINDOWS_PHONE)
		SET(FISHENGINE_PLATFORM_NAME "win_phone")
		SET(FISHENGINE_PLATFORM_WINDOWS_PHONE TRUE)
		SET(FISHENGINE_PLATFORM_WINDOWS_RUNTIME TRUE)
	ELSE()
		SET(FISHENGINE_PLATFORM_NAME "win")
		SET(FISHENGINE_PLATFORM_WINDOWS_DESKTOP TRUE)
	ENDIF()
	SET(FISHENGINE_PLATFORM_WINDOWS TRUE)
ELSEIF(ANDROID)
	SET(FISHENGINE_PLATFORM_NAME "android")
	SET(FISHENGINE_PLATFORM_ANDROID TRUE)
ELSEIF(${CMAKE_SYSTEM_NAME} MATCHES "Linux")
	SET(FISHENGINE_PLATFORM_NAME "linux")
	SET(FISHENGINE_PLATFORM_LINUX TRUE)
ELSEIF(IOS)
	SET(FISHENGINE_PLATFORM_NAME "ios")
	SET(FISHENGINE_PLATFORM_IOS TRUE)
ELSEIF(${CMAKE_SYSTEM_NAME} MATCHES "Darwin")
	IF(IOS)
		SET(FISHENGINE_PLATFORM_NAME "ios")
		SET(FISHENGINE_PLATFORM_IOS TRUE)
	ELSE()
		SET(FISHENGINE_PLATFORM_NAME "darwin")
		SET(FISHENGINE_PLATFORM_DARWIN TRUE)
	ENDIF()
ENDIF()

IF(${CMAKE_HOST_SYSTEM_NAME} STREQUAL "Windows")
	SET(FISHENGINE_HOST_PLATFORM_NAME "win")
	SET(FISHENGINE_HOST_PLATFORM_WINDOWS TRUE)
ELSEIF(${CMAKE_HOST_SYSTEM_NAME} STREQUAL "Linux")
	SET(FISHENGINE_HOST_PLATFORM_NAME "linux")
	SET(FISHENGINE_HOST_PLATFORM_LINUX TRUE)
ELSEIF(${CMAKE_HOST_SYSTEM_NAME} STREQUAL "Darwin")
	SET(FISHENGINE_HOST_PLATFORM_NAME "darwin")
	SET(FISHENGINE_HOST_PLATFORM_DARWIN TRUE)
ENDIF()

IF(NOT FISHENGINE_ARCH_NAME)
	IF((CMAKE_SYSTEM_PROCESSOR MATCHES "AMD64") OR (CMAKE_SYSTEM_PROCESSOR MATCHES "x86_64"))
		SET(FISHENGINE_ARCH_NAME "x64")
	ELSE()
		SET(FISHENGINE_ARCH_NAME "x86")
	ENDIF()
ENDIF()

IF((CMAKE_HOST_SYSTEM_PROCESSOR MATCHES "AMD64") OR (CMAKE_HOST_SYSTEM_PROCESSOR MATCHES "x86_64"))
	SET(FISHENGINE_HOST_ARCH_NAME "x64")
ELSE()
	SET(FISHENGINE_HOST_ARCH_NAME "x86")
ENDIF()

SET(FISHENGINE_PLATFORM_NAME ${FISHENGINE_PLATFORM_NAME}_${FISHENGINE_ARCH_NAME})
SET(FISHENGINE_HOST_PLATFORM_NAME ${FISHENGINE_HOST_PLATFORM_NAME}_${FISHENGINE_HOST_ARCH_NAME})

IF(FISHENGINE_PLATFORM_ANDROID OR FISHENGINE_PLATFORM_IOS)
	SET(FISHENGINE_PREFERRED_LIB_TYPE "STATIC")
ELSE()
	SET(FISHENGINE_PREFERRED_LIB_TYPE "SHARED")
ENDIF()

IF (FISHENGINE_PLATFORM_WINDOWS_DESKTOP OR FISHENGINE_PLATFORM_LINUX OR FISHENGINE_PLATFORM_DARWIN)
	SET(FISHENGINE_IS_DEV_PLATFORM TRUE)
ELSE()
	SET(FISHENGINE_IS_DEV_PLATFORM FALSE)
ENDIF()
